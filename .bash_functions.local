function msufind() {
    postvar="search=Search&fst=$1&lst=$2"
    data=`curl --data "$postvar" https://search.msu.edu/people/index.php | w3m -dump -T text/html | grep -o -E 'Email:.*' | awk '{print $2}'`
    echo ${data}
    echo -n ${data} | pbcopy
}

export -f msufind

